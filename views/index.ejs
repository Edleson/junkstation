		<script type="text/javascript">
			$(document).ready(function(){
				var marcaCallback = function(response, textStatus, jqXHR){
					var modelos = response.data;
					
					$('#cbmModelo option').remove();
					
					$('#cbmModelo').append($('<option>', {
						    value : "0" ,
						    text  : ""  ,
						    selected : "selected"
					})).change();

					modelos.forEach(function(item){
						$('#cbmModelo').append($('<option>', {
						    value : item._id ,
						    text  : item.nome
						}));
					});
				};
				
				$("#cbmMarca").change(function(){
					if($(this).val() !== "0"){
						listModeloByMarca($(this).val(), marcaCallback, {}, true);
					}
				});

				var ufCallBack = function(response, textStatus, jqXHR){
					var ufs = response.data;
					ufs.forEach(function(item){
						$('#cbmUf').append($('<option>', {
						    value : item.nome ,
						    text  : item.nome
						}));
					});
				};

				listUF(ufCallBack, {}, false);
				 
				$("#btn-form").click(function() {
					$("#homepage_search").reset(function(){
						return false;
					});
				});
			});
		</script>

