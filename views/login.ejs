<!DOCTYPE html>
<html ng-app="junkstation" >
	<head>
		<% include template/meta %>
		<title>Junk Station a Vitrine do seu clássico</title>
		<% include template/css %>
	</head>

	<body >
		<% include template/header %>
		
		<div class="container_12 clearfix content">
			<div class="grid_6">
				<div class="box">
					<h3>Login</h3>
					<div class="box-content clearfix">
						<form action="/login" method="post">
							<input type="text" placeholder="Digite o seu email" name="email">
							<input type="password" placeholder="Digite a sua senha" name="password">
							
							<p class="centered_content">
								<a href="#" class="button submit green wide">Login</a>
							</p>
							<p>
								<label for="remember_me" class="custom_checkbox remember_me">
									<input type="checkbox" name="remember_me" id="remember_me">Lembre-me
								</label>

								<a href="#" class="forgotten_pass right">Esqueceu sua senha?</a>
							</p>
							
							<hr/>
							
							<p>ou</p>

							<p class="centered_content">
								<a href="#" class="button facebook wide wider">Login com Facebook</a>
							</p>
							
							<p class="centered_content">
								<a href="#" class="button wide red wider">Login com google+</a>
							</p>
							<br/>
						</form>
					</div>
				</div>
			</div>

			<div class="grid_6">
				<div class="box">
					<h3>Nova Conta</h3>
					<div class="box-content">
						<form action="/login" method="post">
							<input type="text"     placeholder="Digite o nome" name="username"  />
							<input type="password" placeholder="Digite o seu e-mail" name="email"     />
							<input type="password" placeholder="Digite a senha" name="password"  />
							<input type="password" placeholder="Digite a senha novamente" name="repassword" class="bigger_margin" />
							
							<p class="smaller_margin">
								<label for="newsletter" class="custom_checkbox">
									<input type="checkbox" name="newsletter" id="newsletter">
									 Gostaria de receber nossas promoções e notícias.
								</label>
							</p>

							<p>
								<label for="terms" class="custom_checkbox">
									<input type="checkbox" name="terms" id="terms">
									Eu aceito <a href="#">termos de uso </a> and <a href="#">política de privacidade</a>.
								</label>
							</p>

							<p class="centered_content"><a class="button submit green wide">Cadastrar </a></p>
						</form>
					</div>
				</div>
			</div>
			
		</div>
		
		<!-- INICIO DO FOOTER-->
		<% include template/footer %>
		<!-- FIM DO FOOTER-->
	</body>
</html>