<!DOCTYPE html>
<html ng-app="junkstation" >
	<head>
		<% include template/meta %>
		<link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
		<title>Junk Station a Vitrine do seu clássico</title>
		
		<% include template/css %>
	</head>

	<body >
		<% include template/header %>
		<div class="container_12 clearfix content">
			
			<% include template/vertical_menu_admin %>
			<div class="grid_9 content">
				<%- request.flash("meusAnuncios") %>
				<%- request.flash("deleteAnuncio") %>
				<% if(response.length > 0 ){%>
					<h2 class="page_title with_filter">Meus Anúncios</h2>
				<%}%>
				<% response.forEach(function(anuncio){ %>
					<article class="box clearfix grid_item">
						<div class="item_heading">
							<div class="overlayed">
								<img src="/dist/images/smart.jpg" alt="">
								<div class="overlay">
									<span class="overlay-icon-left">
										<a href="/anuncio/detail">
											<i class="icomoon-link"></i>
										</a>
									</span>
									<span class="overlay-icon-right">
										<a href="/dist/images/smart.jpg" class="fancybox" data-fancybox-group="group1">
											<i class="icomoon-expand-2"></i>
										</a>
									</span>
								</div>
							</div>
							<h4> <%- anuncio.marca %> <a href="/anuncio/detail"><%- anuncio.modelo %></a></h4>
							<span class="location"><%- anuncio.localizacao %>, <strong><%- anuncio.estado %></strong></span>
						</div>

						<div class="item_info">
							<span class="item_year"><%- anuncio.ano %></span>
							<span class="item_engine"><%- anuncio.motor %></span>
							<span class="item_transimition"><%- anuncio.cambio %></span>
							<span class="item_mileage"><%- anuncio.kilometragem %> KM</span>

						</div>

						<div class="item_footer">
							<span class="item_price"> R$ <%- Utils.numeral(anuncio.preco).format('0,0.00') %></span>
							<span ><a class="button small-button wide blue">Editar</a></span>
							
							<form action="/anuncio/delete" method="post" name="<%- anuncio._id%>">
								<input type="hidden" name="id" value="<%- anuncio._id%>" />
								<span ><a  id="<%- anuncio._id%>" class="button small-button wide red confirm">Excluir</a></span>
							</form>
							
						</div>
					</article>
				<%});%>
			</div>
		</div>
		<!-- INICIO DO FOOTER-->
		<% include template/footer %>
		<!-- FIM DO FOOTER-->

		<script type="text/javascript">
			$(document).ready(function(){
				$(".confirm").click(function(){
					var id = $(this).attr("id");
					$.confirm({
						post : true, 
						confirm : function(){
							var form = $("form[name='" + id + "']");
							form.submit();
						},

						cancel : function(){
							return false;
						}
					});
				});
			});
		</script>
	</body>
</html>

