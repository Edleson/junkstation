<!DOCTYPE html>
<html ng-app="junkstation" >
	<head>
		<% include template/meta %>
		<title>Junk Station a Vitrine do seu clássico</title>
		<% include template/css %>
	</head>

	<body >
		<% include template/header %>
		<div class="container_12 clearfix content" id="add_new_item_info">
			<% include template/vertical_menu_admin %>
			
			<div class="grid_9 bigger_margin">
				<div class="box clearfix">
					<h3>Meu Perfil</h3>
					<div class="box-content clearfix bordered_under">
						
						<div class="grid_4 left">
							<p>
								<label for="provider" class="dropdown_label">Provedor </label>
								<input type="text" readonly="readonly" name="provider" value="" >
							</p>
						</div>
						
						<div class="grid_4 left">
							<p>
								<label for="emailsocial" class="dropdown_label">e-mail</label>
								<input type="text" readonly="readonly" name="emailsocial" value="" >
							</p>								
						</div>						
					</div>
					
					<form>
						<div class="box-content clearfix">
							<div class="grid_4 left clearfix">
								<p>
									<label for="tipopessoa" class="dropdown_label">Tipo de Pessoa</label>
									<select  name="tipopessoa" id="tipopessoa" class="customSelect full" >
										<option value="">Selecione</option>
										<option value="PF">Pessoa Física</option>
										<option value="PJ">Pessoa Jurídica</option>
									</select>
								</p>
							</div>

							<div class="grid_8 left">							
								<p></p>
							</div>
							
							<div class="grid_5 left">
								<p>
									<label for="razaosocial" class="dropdown_label">Razão Social</label>
									<input type="text" id="razaosocial" name="razaosocial" placeholder="Razão Social">
								</p>
							</div>

							<div class="grid_3 left">
								<p>
									<label for="cnpj" class="dropdown_label">CNPJ</label>
									<input type="text" id="cnpj" name="cnpj" placeholder="00.000.000/0000-00">
								</p>
							</div>

							<div class="grid_8 left">
								<p>
									<label for="nome" class="dropdown_label">Nome</label>
									<input type="text" id="nome" name="nome" placeholder="Seu Nome">
								</p>
							</div>

							<div class="grid_3 left">									
								<p>
									<label for="nascimento" class="dropdown_label">Data de nascimento</label>
									<input type="text" id="nascimento" name="nascimento" placeholder="dd/mm/aaaa">
								</p>
							</div>

							<div class="grid_3 left">
								<p>
									<label for="cpf" class="dropdown_label">CPF</label>
									<input type="text" id="cpf" name="cpf" placeholder="CPF" >
								</p>
							</div>

							<div class="grid_2 left">							
								<p>
									<label for="sexo" class="dropdown_label">Sexo</label>
									<select name="sexo" id="sexo" class="customSelect full" >
										<option value="">Selecione</option>
										<option value="M">Masculino</option>
										<option value="F">Feminino</option>
									</select>
								</p>
							</div>

							<div class="grid_3 left">							
								<p>
									<label for="cep" class="dropdown_label">CEP</label>
									<input type="text" id="cep" name="cep" placeholder="CEP" >
								</p>
							</div>

							<div class="grid_8 left">							
								<p></p>
							</div>

							<div class="grid_5 left">
								<p>
									<label for="rua" class="dropdown_label">Endereço</label>
									<input type="text" id="rua" name="rua" placeholder="Seu Endereço">		
								</p>
							</div>

							<div class="grid_3 left">
								<p>
									<label for="numero" class="dropdown_label">Número</label>
									<input type="text" id="numero" name="numero" placeholder="Nr." >		
								</p>
							</div>

							<div class="grid_5 left">
								<p>
									<label for="bairro" class="dropdown_label">Bairro</label>
									<input type="text" id="bairro" name="bairro" placeholder="Bairro">		
								</p>
							</div>

							<div class="grid_3 left">
								<p>
									<label for="complemento" class="dropdown_label">Complemento</label>
									<input type="text" id="complemento" name="complemento" placeholder="Complemento">	
								</p>
							</div>

							<div class="grid_5 left">
								<p>
									<label for="cidade" class="dropdown_label">Cidade</label>
									<input type="text" id="cidade" name="cidade" placeholder="Cidade" >		
								</p>
							</div>

							<div class="grid_3 left">
								<p>			    
							        <label for="estado" class="dropdown_label">Estado</label>
							        <select id="estado" class="customSelect full">
							        	<option value="0">Selecione</option>
							        </select>
								</p>
							</div>	

							<div class="grid_4 left">							
								<p>
									<label for="telefonecel" class="dropdown_label">Celular</label>
									<input type="text" id="telefonecel" name="telefonecel" placeholder="(XX) XXXXX-XXXX">
								</p>
							</div>
											
							<div class="grid_4 left">							
								<p>
									<label for="telefoneres" class="dropdown_label">Telefone</label>
									<input type="text" id="telefoneres" name="telefoneres" placeholder="(XX) XXXX-XXXX">
								</p>
							</div>

							<div class="full left">
								<p></p>
							</div>

							<div class="full left">
								<p>
									<button type="submit" class="button submit wide red right">Salvar Perfil</button>	 
								</p>
							</div>
						</div>
					</form>
				</div>					
			</div>
			
			
			
		</div>
		<!-- INICIO DO FOOTER-->
		<% include template/footer %>
		<!-- FIM DO FOOTER-->
	</body>
</html>

